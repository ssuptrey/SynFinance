# Include documentation
include README.md
include LICENSE
include CONTRIBUTING.md
include CHANGELOG.md

# Include requirements
include requirements.txt
include pyproject.toml
include setup.py

# Include configuration
include pytest.ini
include .gitignore

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst

# Include examples
recursive-include examples *.py
recursive-include examples *.md

# Include scripts
recursive-include scripts *.py
recursive-include scripts *.sh
recursive-include scripts *.bat

# Include package data
recursive-include src *.py
recursive-include src/utils *.py
recursive-include src/generators *.py
recursive-include src/models *.py

# Exclude unwanted files
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * *.bak
recursive-exclude * *.swp
recursive-exclude * *~

# Exclude tests from distribution
recursive-exclude tests *
exclude tests

# Exclude output data
recursive-exclude output *
recursive-exclude data/generated *

# Exclude development files
exclude .vscode
exclude .idea
recursive-exclude .vscode *
recursive-exclude .idea *

# Exclude virtual environments
exclude venv
exclude .venv
recursive-exclude venv *
recursive-exclude .venv *
